<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.toggleboblight"
    name="Toggle Boblight" version="1.0.0" provider-name="Alex Iribarren">
  <requires>
    <import addon="xbmc.python" version="2.19.0"/>
    <import addon="script.xbmc.boblight" version="2.0.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py"> 
     <provides>executable</provides> 
  </extension> 
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Toggle boblight on or off</summary>
    <description lang="en">This simple script toggles the state of Boblight. It's useful to run it as a binding to a key (RunAddon(script.toggleboblight)).</description>
    <language>en</language>
    <platform>all</platform>
    <license>GPLv3</license>
    <forum></forum>
    <source></source>
  </extension>
</addon>
